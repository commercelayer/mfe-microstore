{
  "name": "microstore",
  "version": "4.1.1",
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  },
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "build": "tsc && vite build",
    "start": "vite preview",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "pnpm run test:unit",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "prepare": "touch ./public/config.local.js",
    "dep:upgrade:major": "pnpm exec npm-check-updates -u",
    "dep:upgrade:minor": "pnpm dep:upgrade:major -t minor"
  },
  "keywords": [
    "reactjs",
    "vitejs",
    "jamstack",
    "headless",
    "ecommerce",
    "api",
    "microstore",
    "store",
    "commercelayer"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commercelayer/mfe-microstore.git"
  },
  "author": {
    "name": "Matteo Alessani",
    "email": "matteo@commercelayer.io"
  },
  "bugs": {
    "url": "https://github.com/commercelayer/mfe-microstore/issues"
  },
  "homepage": "https://github.com/commercelayer/mfe-microstore#readme",
  "license": "MIT",
  "dependencies": {
    "@commercelayer/js-auth": "^6.2.1",
    "@commercelayer/react-components": "^4.13.3",
    "@commercelayer/react-utils": "1.0.0-beta.3",
    "@commercelayer/sdk": "^6.0.2",
    "@types/async-retry": "^1.4.8",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "18.3.0",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^4.2.1",
    "async-retry": "^1.3.3",
    "autoprefixer": "^10.4.19",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-styled-components": "^2.1.4",
    "i18next": "^23.11.4",
    "jsdom": "^24.0.0",
    "jwt-decode": "^4.0.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^14.1.1",
    "rollup-plugin-visualizer": "^5.12.0",
