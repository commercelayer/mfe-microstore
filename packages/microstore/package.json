{
  "name": "microstore",
  "version": "5.0.1",
  "engines": {
    "node": ">=20",
    "pnpm": ">=7"
  },
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "build": "tsc && vite build",
    "start": "vite preview",
    "lint": "pnpm biome check src",
    "lint:fix": "pnpm biome check src --write",
    "test": "pnpm run test:unit",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "prepare": "touch ./public/config.local.js",
    "dep:upgrade:major": "pnpm exec npm-check-updates -u",
    "dep:upgrade:minor": "pnpm dep:upgrade:major -t minor"
  },
  "keywords": [
    "reactjs",
    "vitejs",
    "jamstack",
    "headless",
    "ecommerce",
    "api",
    "microstore",
    "store",
    "commercelayer"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commercelayer/mfe-microstore.git"
  },
  "author": {
    "name": "Matteo Alessani",
    "email": "matteo@commercelayer.io"
  },
  "bugs": {
    "url": "https://github.com/commercelayer/mfe-microstore/issues"
  },
  "homepage": "https://github.com/commercelayer/mfe-microstore#readme",
  "license": "MIT",
  "dependencies": {
    "@commercelayer/js-auth": "^7.1.0",
    "@commercelayer/react-components": "4.28.6",
    "@commercelayer/sdk": "^6.47.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@types/async-retry": "^1.4.9",
    "@types/node": "^24.10.2",
    "@types/react": "^18.3.25",
    "@types/react-dom": "18.3.7",
    "@vitejs/plugin-react": "^5.1.0",
    "async-retry": "^1.3.3",
    "autoprefixer": "^10.4.22",
    "i18next": "^25.7.2",
    "jsdom": "^27.3.0",
    "jwt-decode": "^4.0.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^16.4.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15",
    "wouter": "^3.8.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "dotenv": "^17.2.3"
  }
}
