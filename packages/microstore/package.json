{
  "name": "microstore",
  "version": "4.7.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  },
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "build": "tsc && vite build",
    "start": "vite preview",
    "lint": "pnpm biome check src",
    "lint:fix": "pnpm biome check src --write",
    "test": "pnpm run test:unit",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "prepare": "touch ./public/config.local.js",
    "dep:upgrade:major": "pnpm exec npm-check-updates -u",
    "dep:upgrade:minor": "pnpm dep:upgrade:major -t minor"
  },
  "keywords": [
    "reactjs",
    "vitejs",
    "jamstack",
    "headless",
    "ecommerce",
    "api",
    "microstore",
    "store",
    "commercelayer"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commercelayer/mfe-microstore.git"
  },
  "author": {
    "name": "Matteo Alessani",
    "email": "matteo@commercelayer.io"
  },
  "bugs": {
    "url": "https://github.com/commercelayer/mfe-microstore/issues"
  },
  "homepage": "https://github.com/commercelayer/mfe-microstore#readme",
  "license": "MIT",
  "dependencies": {
    "@commercelayer/js-auth": "^6.7.2",
    "@commercelayer/react-components": "4.25.6",
    "@commercelayer/react-utils": "1.0.0-beta.3",
    "@commercelayer/sdk": "^6.45.0",
    "@types/async-retry": "^1.4.9",
    "@types/node": "^24.2.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "18.3.7",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^4.7.0",
    "async-retry": "^1.3.3",
    "autoprefixer": "^10.4.21",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-styled-components": "^2.1.4",
    "i18next": "^25.3.2",
    "jsdom": "^26.1.0",
    "jwt-decode": "^4.0.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^15.6.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "styled-components": "^6.1.19",
    "tailwindcss": "^3.4.17",
    "twin.macro": "^3.4.1",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vitest": "^3.2.4",
    "wouter": "^3.7.1",
    "zod": "^3.25.61"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "dotenv": "^17.2.1"
  },
  "babelMacros": {
    "twin": {
      "preset": "styled-components"
    }
  }
}
