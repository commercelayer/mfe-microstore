{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "vitest/globals",
      "vite/client",
    ],
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "#components/*": [
        "src/components/*"
      ],
      "#hooks/*": [
        "src/hooks/*"
      ],
      "#locales/*": [
        "src/locales/*"
      ],
      "#providers/*": [
        "src/providers/*"
      ],
      "#utils/*": [
        "src/utils/*"
      ],
      "#pages/*": [
        "src/pages/*"
      ],
      "#styles/*": [
        "src/styles/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "public/config*.js",
    ".eslintrc.cjs"
  ],
  "exclude": [
    "node_modules"
  ]
}
